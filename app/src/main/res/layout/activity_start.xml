<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:orientation="vertical"
    tools:context="tsekhmeistruk.funnycats.activities.StartActivity">


    <ImageView
        android:id="@+id/main_header"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="75dp"
        android:scaleType="centerCrop"
        android:src="@drawable/pussyblack" />

    <ImageView
        android:id="@+id/animated_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/main_header"
        android:scaleType="centerCrop"
        android:src="@drawable/black" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#331144aa" />

    <ImageView
        android:id="@+id/header_text"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:scaleType="fitCenter"
        android:src="@drawable/header_text" />

    <Button
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="30dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/main_button"
        android:drawableTop="@drawable/cat48_icon"
        android:onClick="onCatButtonPressed"
        android:paddingTop="10dp"
        android:text="@string/cats"/>

    <Button
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="15dp"
        android:background="@drawable/main_button"
        android:drawableTop="@drawable/dog48_icon"
        android:onClick="onDogButtonPressed"
        android:paddingTop="10dp"
        android:text="@string/dogs"/>

</RelativeLayout>
